<div class="container">
  <div class="page-header span-md-4 offset-md-2">
    <h2>Save an order</h2>
  </div>

  <%= form_for(@saved_order, html: {class: "form-horizontal center"}) do |f| %>

    <div class="form-group">
      <%= f.label :name, class: "col-md-3 control-label" %>
      <div class="col-md-4">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :order, class: "col-md-3 control-label" %>
      <div class="col-md-4">
        <%= f.text_area :order, class: "form-control", value: @saved_order.order.to_yaml %>
      </div>
    </div>

    <div class="col-md-1 col-md-offset-3">
      <%= f.submit "Submit Order", class: "btn btn-primary" %>
    </div>

  <% end %>

</div>

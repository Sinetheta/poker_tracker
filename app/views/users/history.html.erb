<div class="container">
  <div class="span5 offset2">
    <div class="page-header">
      <h1><%= "#{@user.name}'s History" %></h1>
    </div>

    <% if @games.empty? %>
      <p>No history to display.</p>
    <% else %>

      <table class="table">
        <tr>
          <th></th>
          <th>Win Rate</th>
          <th>Average Round Out</th>
          <th>Average Percent of Total Chips when going out</th>
        </tr>
        <tr>
          <td></td>
          <td><%= @stats[:win_perc].round(0) %>%</td>
          <td><%= @stats[:round_aver].round(2) %></td>
          <td><%= @stats[:chips_perc].round(2) %>%</td>
        </tr>
      </table>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Game Name</th>
            <th>Game Winner</th>
            <th>Player Standing</th>
            <th>Percent of Total Chips Small Blind is when going out</th>
          </tr>
        </thead>
        <tbody>

          <% @games.each do |game| %>
            <tr>
              <td><%= link_to game.name, game_path(game), class: "btn btn-default" %></td>
              <td><%= game.winner.owner.name %></td>
              <% if @won.include?(game) %>
                <td>Winner</td>
                <td></td>
              <% else %>
                <td><%= "Went out on round #{game.find_player(@user).round_out}" %></td>
                <td><%= "#{((game.blinds[game.find_player(@user).round_out]/game.total_chips.to_f)*100).round(2)}%" %></td>
              <% end %>
            </tr>
          <% end %>

        </tbody>
      </table>

    <% end %>

  </div>
</div>

<div class="container">
  <div class="span5 offset2">
    <div class="page-header">
      <h1>All Time Wins</h1>
    </div>
    <table class="table">
      <tr>
        <th>Player</th>
        <th>Number of Wins</th>
      </tr>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.games.select {|game| game.winner.to_i == user.id}.length %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>

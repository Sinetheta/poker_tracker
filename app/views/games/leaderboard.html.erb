<div class="container">
  <div class="span5 offset2">
    <div class="page-header">
      <h1>All Time Wins</h1>
    </div>
    <table class="table">
      <thead>
        <tr>
          <th>Player</th>
          <th>Number of Wins</th>
        </tr>
      </thead>
      <tbody>
        <% @players.each do |player| %>
          <tr>
            <td><%= player.name %></td>
            <td><%= player.games.select {|game| game.winner_type == player.class.to_s.downcase && game.winner == player.id.to_s}.length %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

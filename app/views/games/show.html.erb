<h1><%= @game.name %></h1>

<p><%= "A game with #{@game.players} players, starting with #{@game.chips} chips each." %></p>

<div class="container">
  <div class="span5 offset2">
    <table class="table table-bordered">
      <tr>
        <th>Round Number</th>
        <th>Small Blind</th>
        <th>Big Blind</th>
        <th>Time</th>
      </tr>  
      <% @game.blinds.each_with_index do |blind, i| %>
        <tr>
          <td><%= i+1 %></td>
          <td><%= blind %></td>
          <td><%= blind*2 %></td>
          <td><%= (i+1)*@game.round_length %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>

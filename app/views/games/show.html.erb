<div class="container">
  <div class="row">

    <audio id="clickAudio"><source src=<%= asset_path('click.ogg') %> type="audio/ogg" ></audio>
    <audio id="marimbaAudio"><source src=<%= asset_path('marimba.ogg') %> type="audio/ogg" ></audio>

    <div class="col-md-6 offset-md-1">
      <div class="row" id="title-row">
        <div class="col-xs-6">
          <h1><%= @game.name %></h1>
        </div>
        <div class="col-xs-6">
          <h1 id="roundDisplay">Round <%= @game.round+1 %></h1>
        </div>
      </div>

      <% unless @game.winner_id %>
        <div class="row button-row">
          <div class="col-xs-6">
            <%= link_to "Start Timer", game_path(@game),
              remote: true, data: {type: "json"},
              class: "btn btn-primary", id: "startTimer" %>
            <%= link_to "Next Round", game_path(@game, :game => {round: @game.round+1}),
              method: :patch,
              class: "btn btn-primary" unless @game.round+1 == @game.blinds.length %>
          </div>
          <div class="dropdown col-xs-3">
            <button class="btn btn-primary" type="button" id="roundSelect" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
              Go to round <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" aria-labelledby="roundSelect">
              <% @blinds.each_with_index do |blinds, i| %>
                <li><%= link_to "Round #{i+1} [#{blinds[0]} - #{blinds[1]}]", game_path(@game, :game => {round: i}),
                  method: :patch %></li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>

      <div class="row">
        <table class="table table-hover">
          <tr>
            <h3>Players</h3>
          </tr>

          <% @players.each do |player| %>
            <% if player.class == User
                 player_type = "user"
            elsif player.class == Guest
              player_type = "guest"
            end %>
            <tr>
              <td><%= player.name %></td>
              <td id=<%= "#{player_type}OutButtonCell#{player.id}" %>>
                <% if @game.player_out_round(player) %>
                  <%= "Out on round #{@game.player_out_round(player)+1}" %>
                <% elsif @game.winner == player %>
                  <%= "Winner" %>
                <% else %>
                  <%= link_to "Set Player Out", game_path(@game),
                    remote: true, data: {type: "json"},
                    class: "btn btn-primary #{player_type}OutButton", playerid: player.id %>
                <% end %>
              </td>
            </tr>
          <% end %>

        </table>
      </div>

    </div>
    <div class="col-md-3">
      <div class="timer-container">
        <h1 id="timer">
          <% if @game.winner_id %>
            Game Over
          <% else %>
            <%= "#{@game.round_length}:00" %>
          <% end %>
        </h1>
      </div>

      <% if @game.winner_id %>
        <h3>Blind Structure</h3>
        <table class="table table-hover">
          <tr>
            <th>Round</th>
            <th>Small</th>
            <th>Big</th>
          </tr>
          <% @blinds.take(@game.round+2).each_with_index do |blinds, i| %>
            <tr>
              <td><%= i+1 %></td>
              <td><%= blinds[0] %></td>
              <td><%= blinds[1] %></td>
            </tr>
          <% end %>
        <% else %>

          <div class="row">
            <div class="col-xs-6">
              <h2 class="blind">Small</h2>
              <h3 class="blind" id="smallBlind"><%= @current_blinds[0] %></h3>
            </div>
            <div class="col-xs-6">
              <h2 class="blind">Big</h2>
              <h3 class="blind" id="bigBlind"><%= @current_blinds[1] %></h3>
            </div>
          </div>
          <% upcoming_blinds = @blinds.select {|blind| blind[0] > @current_blinds[0]}.take(4) %>
          <% unless upcoming_blinds.empty? %>
            <table class="table table-hover" id="blindsTable">
              <tr>
                <h3>Upcoming Blinds</h3>
              </tr>
              <% upcoming_blinds.each do |small, big| %>
                <tr>
                  <td><%= small %></td>
                  <td><%= big %></td>
                </tr>
              <% end %>
            </table>
          <% end %>
        <% end %>

    </div>
  </div>
</div>

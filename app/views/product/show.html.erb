<div class="content-centered">

  <h3><%= @product.name %></h3>

  <%= form_tag do %>
    <%= hidden_field_tag 'name', @product.name %>
    <div class="row">
      <div class="col-xs-12">
        <div class="row">
          <% if @sizes.length > 1 %>
            <div class="col-xs-12 col-md-6">
              <%= label_tag :size %>
              <%= select_tag(:size, options_for_select(@sizes, @sizes.first), include_hidden: false, class: "select2", id: "size") %>
            </div>
          <% end %>
          <% if !@option1.empty? %>
            <div class="col-xs-12 col-md-6">
              <%= label_tag :option1, 'Crust Choice' %>
              <%= select_tag(:option1, options_for_select(@option1), class: "select2", id: "option1") %>
            </div>
          <% end %>
          <% if !@option2.empty? %>
            <div class="col-xs-12 col-md-6">
              <%= label_tag :option2, 'Crust Thickness' %>
              <%= select_tag(:option2, options_for_select(@option2), class: "select2", id: "option2") %>
            </div>
          <% end %>
          <% if !@option3.empty? %>
            <div class="col-xs-12 col-md-6">
              <%= label_tag :option3, 'Sauce Option'%>
              <%= select_tag(:option3, options_for_select(@option3), include_blank: true, class: "select2", id: "option3") %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="col-xs-12">
        <div class="row">
          <% if !@removals.empty? %>
            <div class="col-xs-12 col-md-6">
              <%= label_tag :removals, 'Remove Toppings'%>
              <%= select_tag(:removals, options_for_select(@removals), {class: "select2-multi", id: "removals", multiple: true }) %>
            </div>
          <% end %>
          <% if !@additions.empty? %>
            <div class="col-xs-12 col-md-6">
              <%= label_tag :additions, 'Add Toppings' %>
              <%= select_tag(:additions, options_for_select(@additions), { class: "select2-multi", id: "additions", multiple: true }) %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="col-xs-12">
        <div class="row">
          <div class="col-xs-6 col-md-3">
            <%= label_tag :quantity %>
            <%= number_field_tag(:quantity, '1', in: 1...100, class: "form-control") %>
          </div>
          <div class="col-xs-6 col-md-3">
            <%= label_tag :name_for, 'Who is this for' %>
            <%= text_field_tag(:name_for, nil, class: "form-control") %>
          </div>
          <div class="col-xs-6">
            <%= label_tag :order_id, 'Order to add to' %>
            <%= select_tag(:order_id, options_for_select(@orders.collect{|order| [order.name, order.id]}), include_blank: true, class: "select2", id: "order_id") %>
          </div>
        </div>
      </div>
      <div class="col-xs-12">
        <div class="row">
          <div class="col-xs-12 col-md-6">
            <%= label_tag :instructions, 'Additional instructions' %>
            <%= text_area_tag(:instructions, nil, class: "form-control") %>
          </div>
        </div>
      </div>
      <div class="col-xs-6">
        <%= submit_tag("Done", class: "btn btn-primary") %>
      </div>
    </div>
  <% end %>

</div>

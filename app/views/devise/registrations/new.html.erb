<div class="container">
  <div class="page-header span-md-4 offset-md-2">
    <h2>Sign up</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-horizontal center"}) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :name, class: "col-md-2 control-label" %>
      <div class="col-md-4">
        <%= f.text_field :name, autofocus: true, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :email, class: "col-md-2 control-label" %>
      <div class="col-md-4">
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "col-md-2 control-label" %>
      <div class="col-md-4">
        <%= f.password_field :password, autocomplete: "off", class: "form-control", html: {"aria-describedby" => "passwordHelp"} %>
        <% if @minimum_password_length %>
          <span id="passwordHelp" class="help-block"><%= @minimum_password_length %> characters minimum</span>
        <% end %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, class: "col-md-2 control-label" %>
      <div class="col-md-4">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>
    </div>

    <div class="col-md-1 col-md-offset-2">
      <%= f.submit "Sign up", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>


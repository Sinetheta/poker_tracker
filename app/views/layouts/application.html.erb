<!DOCTYPE html>
<html>
  <head>
    <title>PokerTracker</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <div id="container">
      <div class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <%= link_to 'PokerTracker', root_url, class: "navbar-brand"%>
          </div>
          <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
              <li><%= link_to "All Games", games_url %></li>
              <li><%= link_to "New Game", new_game_url %></li>
            </ul>
          </div>
        </div>
      </div>
      <div class="container-fluid">
        <p class="bg-success" id="notice"><%= notice %></p>
        <p class="bg-warning" id="notice"><%= alert %></p>
        <%= yield %>
      </div>
    </div>
  </body>
</html>
